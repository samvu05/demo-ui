<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp4">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/sp12"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/layout_add_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_stroke_round_12">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp12"
                android:scaleType="fitXY"
                android:src="@drawable/ic_video_joiner"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_theme_1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="@dimen/dp26"
                android:layout_height="@dimen/dp26"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_fill"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:id="@+id/layout_view_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BF212121">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/txt_view_all"
                    android:paddingHorizontal="@dimen/dp8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#BF212121">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/txt_video_1_a"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:layout_marginHorizontal="@dimen/dp4"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>